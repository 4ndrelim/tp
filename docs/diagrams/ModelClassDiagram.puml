@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Class "<<interface>>\nReadOnlySudoHr" as ReadOnlySudoHr
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class SudoHr
Class ModelManager
Class UserPrefs

Class UniqueEmployeeList
Class Id
Class Employee
Class Address
Class Email
Class Name
Class Phone
Class Tag

Class UniqueDepartmentList
Class Department
Class DepartmentName

Class UniqueLeaveList
Class Leave
Class LeaveDate
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

SudoHr .up.|> ReadOnlySudoHr

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlySudoHr
ModelManager -left-> "1" SudoHr
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

SudoHr *--> "1" UniqueEmployeeList
SudoHr *--> "1" UniqueDepartmentList
SudoHr *--> "1" UniqueLeaveList

UniqueEmployeeList --> "~* all" Employee
Employee *--> Id
Employee *--> Name
Employee *--> Phone
Employee *--> Email
Employee *--> Address
Employee *--> "*" Tag

UniqueDepartmentList --> "~* all" Department
Department *--> DepartmentName
Department *-->"1"UniqueEmployeeList

UniqueLeaveList --> "~* all" Leave
Leave *--> LeaveDate
Leave *--> "1"UniqueEmployeeList

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager -->"~* filtered" Employee
ModelManager -->"~* filtered" Department
ModelManager -->"~* filtered" Leave
@enduml
